{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // NOTE: absolute path vscode's issue because of config property
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./plugins/**/*.ts",
    "./config/**/*.ts",
    "./config/**/*.tsx",
    "./*.ts",
    "./*.d.ts",
  ],
  "exclude": [
    "./config/cypress/*.ts",
    "./cypress.config.ts",
    "./cypress",
    "node_modules"
  ]
}